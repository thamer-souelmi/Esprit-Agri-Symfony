{% extends 'baseback.html.twig' %}

{% block body %}
    <div class="col-lg-7">
        <div class="p-5">
            <div class="text-center">
                <h1 class="h4 text-gray-900 mb-4">Edit!</h1>
                {{ form_start(form) }}

                <div class="form-group row">
                    <div class="col-sm-20 mb-3 mb-sm-0">
                        {{ form_row(form.nom, {'attr': {'class': 'form-control form-control-user form-control-lg', 'placeholder': 'Entrez votre nom'}}) }}
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-sm-20 mb-3 mb-sm-0">
                        {{ form_row(form.prenom, {'attr': {'class': 'form-control form-control-user form-control-lg', 'placeholder': 'Entrez votre prénom'}}) }}
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-sm-20 mb-3 mb-sm-0">
                        {{ form_row(form.cin, {'attr': {'class': 'form-control form-control-user form-control-lg', 'placeholder': 'Entrez votre CIN'}}) }}
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-sm-20 mb-3 mb-sm-0">
                        {{ form_row(form.mail, {'attr': {'class': 'form-control form-control-user form-control-lg', 'placeholder': 'Entrez votre email'}}) }}
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-sm-20 mb-3 mb-sm-0">
                        {{ form_row(form.adresse, {'attr': {'class': 'form-control form-control-user form-control-lg', 'placeholder': 'Entrez votre adresse'}}) }}
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-sm-20 mb-3 mb-sm-0">
                        {{ form_row(form.numtel, {'attr': {'class': 'form-control form-control-user form-control-lg', 'placeholder': 'Entrez votre numéro de téléphone'}}) }}
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-sm-20 mb-3 mb-sm-0">
                        {{ form_row(form.role, {'attr': {'class': 'form-control form-control-user form-control-lg'}}) }}
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-sm-20 mb-3 mb-sm-0">
                        {{ form_row(form.mdp, {'attr': {'class': 'form-control form-control-user form-control-lg', 'placeholder': 'Entrez votre mot de passe'}}) }}
                    </div>
                </div>
                        <div class="form-group row">
                            <div class="col-sm-20 mb-3 mb-sm-0"> 
                            {{ form_row(form.image, {'attr': {'class': 'form-control form-control-user'}}) }}

                            </div>
                        </div> 

                
                        <div class="form-group row">
                            <div class="col-sm-20 mb-3 mb-sm-0"> 
                                {{ form_widget(form.save, { 'label': 'Save', 'attr': {'class': 'btn btn-primary btn-user btn-block btn-lg'} }) }}
                            </div> 
                        </div> 
                    {{ form_end(form) }} 


                </div>
                
                <div class="form-group row">
                    <div class="col-sm-20 mb-3 mb-sm-0">
                        <div class="my-2"></div>
                        <a href="{{ path('app_user_index') }}" class="btn btn-light btn-icon-split btn-lg">
                            <span class="icon text-gray-600">
                                <i class="fas fa-arrow-right"></i>
                            </span>
                            <span class="text">Retour</span>
                        </a>
                    </div>  
                </div>

                {{ include('user/_delete_form.html.twig') }}
                
                </div>
        </div>
    
{% endblock %}
