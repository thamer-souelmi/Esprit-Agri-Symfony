{% extends 'baseback.html.twig' %}

{% block title %}Produit{% endblock %}

{% block body %}
   <h1>User</h1>

<table class="card-body">
    <tbody>
        <tr>
            <th>ID</th>
            <td>{{ user.id }}</td>
        </tr>

        <tr>
            <th>CIN</th>
            <td>{{ user.cin }}</td>
        </tr>
        <tr>
            <th>Nom</th>
            <td>{{ user.nom }}</td>
        </tr>
        <tr>
            <th>Prénom</th>
            <td>{{ user.prenom }}</td>
        </tr>
        <tr>
            <th>Mot de passe</th>
            <td>{{ user.mdp }}</td>
        </tr>
        <tr>
            <th>Email</th>
            <td>{{ user.mail }}</td>
        </tr>
        <tr>
            <th>Adresse</th>
            <td>{{ user.adresse }}</td>
        </tr>
        <tr>
            <th>Numéro de téléphone</th>
            <td>{{ user.numtel }}</td>
        </tr>
        <tr>
            <th>Rôle</th>
            <td>{{ user.role }}</td>
        </tr>
        <tr>
            <th>Image</th>
            <td><img src="{{ asset('img/' ~ user.image) }}" alt="User Image" width="50" height="50"></td>
        </tr>

        <tr>
            <td colspan="2">
                <a href="{{ path('app_user_index') }}" class="btn btn-secondary">Retour</a>
                <a href="{{ path('app_user_edit', {'id': user.id}) }}" class="btn btn-success">Éditer</a>
                <form method="post" action="{{ path('app_user_delete', {'id': user.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cet élément ?');" style="display: inline-block;">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
                    <button type="submit" class="btn btn-danger">Supprimer</button>
                </form>
            </td>
        </tr>
    </tbody>
</table>


