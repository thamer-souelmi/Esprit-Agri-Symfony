{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
    <h1>User index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Userid</th>
                <th>Cin</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Mdp</th>
                <th>Mail</th>
                <th>Adresse</th>
                <th>Numtel</th>
                <th>Role</th>
                <th>Image</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.userid }}</td>
                <td>{{ user.cin }}</td>
                <td>{{ user.nom }}</td>
                <td>{{ user.prenom }}</td>
                <td>{{ user.mdp }}</td>
                <td>{{ user.mail }}</td>
                <td>{{ user.adresse }}</td>
                <td>{{ user.numtel }}</td>
                <td>{{ user.role }}</td>
                <td>{{ user.image }}</td>
                <td>
                    <a href="{{ path('app_user_show', {'userid': user.userid}) }}">show</a>
                    <a href="{{ path('app_user_edit', {'userid': user.userid}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="11">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_user_new') }}">Create new</a>
{% endblock %}
