{% extends 'prod.html.twig' %}
{% block title %}Modifier Votre Profile{% endblock %}
{% block banner_image %}
{{ asset('img/edit1.jpg') }}
{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-lg-7">
                <div class="p-5">
                    <h1 class="h4 text-gray-900 mb-4">Edit!</h1>
                    {{ form_start(form) }}

                    <div class="form-group">
                        {{ form_row(form.nom, {'attr': {'class': 'form-control'}}) }}
                    </div>

                    <div class="form-group">
                        {{ form_row(form.prenom, {'attr': {'class': 'form-control'}}) }}
                    </div>

                    <div class="form-group">
                        {{ form_row(form.cin, {'attr': {'class': 'form-control'}}) }}
                    </div>

                    <div class="form-group">
                        {{ form_row(form.mail, {'attr': {'class': 'form-control'}}) }}
                    </div>

                    <div class="form-group">
                        {{ form_row(form.adresse, {'attr': {'class': 'form-control'}}) }}
                    </div>

                    <div class="form-group">
                        {{ form_row(form.numtel, {'attr': {'class': 'form-control'}}) }}
                    </div>

                    <div class="form-group">
                        {{ form_row(form.role, {'attr': {'class': 'form-control'}}) }}
                    </div>

                    <div class="form-group">
                        {{ form_row(form.mdp, {'attr': {'class': 'form-control'}}) }}
                    </div>

                    <div class="form-group">
                        {{ form_row(form.image, {'attr': {'class': 'form-control'}}) }}
                    </div>

                    <div class="form-group">
                        {{ form_widget(form.save, { 'label': 'Save', 'attr': {'class': 'btn btn-primary btn-user btn-block btn-lg'} }) }}
                    </div>

                    {{ form_end(form) }}

                    <div class="form-group">
                        <div class="my-2"></div>
                        <a href="{{ path('app_user_index') }}" class="btn btn-light btn-icon-split btn-lg">
                            <span class="icon text-gray-600">
                                <i class="fas fa-arrow-right"></i>
                            </span>
                            <span class="text">Retour</span>
                        </a>
                    </div>

                    {{ include('user/_delete_form.html.twig') }}

                </div>
            </div>
        </div>
    </div>
{% endblock %}