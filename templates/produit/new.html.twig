{% extends 'prod.html.twig' %}

{% block title %}New Produit{% endblock %}
{% block banner_image %}
    {{ asset('img/pngtree-fruits-and-vegetables-picture-image_3712726.jpg') }}
{% endblock %}
{% block product_heading %}
    <h1 class="display-3 text-white mb-4 animated slideInDown">Produit</h1>
{% endblock %}


{% block body %}
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-lg-7">
                <div class="p-5">
                    {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}

                    <div class="form-group">
                        {{ form_widget(form.nomprod, {'attr': {'class': 'form-control ' ~ (form.nomprod.vars.errors|length > 0 ? 'is-invalid' : '')}}) }}
				{{ form_errors(form.nomprod, {'attr': {'class': 'text-danger'}}) }}
                    </div>

                    <div class="form-group">
                        {{ form_label(form.cat, 'Cat√©gorie') }}
                        {{ form_widget(form.cat, {'attr': {'class': 'form-control'}}) }}
                    </div>

                    <div class="form-group">
                        {{ form_widget(form.prix, {'attr': {'class': 'form-control ' ~ (form.prix.vars.errors|length > 0 ? 'is-invalid' : '')}}) }}
				{{ form_errors(form.prix, {'attr': {'class': 'text-danger'}}) }}
                    </div>

                    <div class="form-group">
                        {{ form_widget(form.qte, {'attr': {'class': 'form-control ' ~ (form.qte.vars.errors|length > 0 ? 'is-invalid' : '')}}) }}
				{{ form_errors(form.qte, {'attr': {'class': 'text-danger'}}) }}
                    </div>

                    <div class="form-group">
                        {{ form_widget(form.descr, {'attr': {'class': 'form-control ' ~ (form.descr.vars.errors|length > 0 ? 'is-invalid' : '')}}) }}
				{{ form_errors(form.descr, {'attr': {'class': 'text-danger'}}) }}
                    </div>

                    <div class="form-group">
                        {{ form_label(form.status, 'Statut') }}
                        {{ form_widget(form.status, {'attr': {'class': 'form-custom-checkbox-class'}}) }}
                    </div>

                    <div class="form-group">
                        {{ form_label(form.image, 'Image') }}
                        {{ form_widget(form.image, {'attr': {'class': 'form-control'}}) }}
                    </div>

                    <button type="submit" class="btn btn-primary">Ajouter</button>

                    {{ form_end(form) }}

                </div>
            </div>
        </div>
    </div>
{% endblock %}

