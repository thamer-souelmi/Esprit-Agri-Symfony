{% extends 'baseback.html.twig' %}

{% block title %}Produit{% endblock %}

{% block body %}
   <h1>Produit</h1>

<table class="table">
    <tbody>
        <tr>
            <th>ID</th>
            <td>{{ produit.getId() }}</td>
        </tr>

        <tr>
            <th>Nom du produit</th>
            <td>{{ produit.getNomprod() }}</td>
        </tr>
        <tr>
            <th>Catégorie</th>
            <td>{{ produit.getCat() }}</td>
        </tr>
        <tr>
            <th>Prix</th>
            <td>{{ produit.getPrix() }}</td>
        </tr>
        <tr>
            <th>Quantité</th>
            <td>{{ produit.getQte() }}</td>
        </tr>
        <tr>
            <th>Description</th>
            <td>{{ produit.getDescr() }}</td>
        </tr>
        <tr>
            <th>Status</th>
            <td>{{ produit.isStatus() ? 'Disponible' : 'Non Disponible' }}</td>
        </tr>
        <tr>
            <th>Image</th>
            <td><img src="{{ asset('img/' ~ produit.getImage()) }}" alt="Product Image" width="50" height="50"></td>
        </tr>

        <tr>
            <td colspan="2">
                <a href="{{ path('app_produit_indexb') }}" class="btn btn-secondary">Retour</a>
                
                <form method="post" action="{{ path('app_produit_delete', {'id': produit.getId()}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cet élément ?');" style="display: inline-block;">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ produit.getId()) }}">
                    <button type="submit" class="btn btn-danger">Supprimer</button>
                </form>
            </td>
        </tr>
    </tbody>
</table>

{{ include('produit/_delete_form.html.twig') }}
{% endblock %}
