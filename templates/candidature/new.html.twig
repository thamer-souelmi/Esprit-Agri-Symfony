{% extends 'condi.html.twig' %}

{% block body %}
    <div class="container mt-5">

        {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
          <div class="col-sm-5 text-center">
    <label for="inputEmail" class="col-sm-4 col-form-label">Date de Candidature : </label>
    <i class="bi bi-calendar3"></i>
    {{ form.vars.data.datecandidature|date('Y-m-d') }}
</div>

        <br>
         <label for="inputEmail" class="col-sm-4 col-form-label ">Expérience Professionnelle </label>
    <div class="col-sm-10">
        {{ form_widget(form.experienceprofessionnelle, {'attr': {'class': 'form-control ' ~ (form.experienceprofessionnelle.vars.errors|length > 0 ? 'is-invalid' : '')}}) }}
        {{ form_errors(form.experienceprofessionnelle, {'attr': {'class': 'text-danger' ,'placeholder': 'Poste Demandé'}}) }}
    </div>
        <br>
         <label for="inputEmail" class="col-sm-4 col-form-label ">Formation</label>
    <div class="col-sm-10">
        {{ form_widget(form.formation, {'attr': {'class': 'form-control ' ~ (form.formation.vars.errors|length > 0 ? 'is-invalid' : '')}}) }}
        {{ form_errors(form.formation, {'attr': {'class': 'text-danger' ,'placeholder': 'Poste Demandé'}}) }}
    </div>
        <br>
         <label for="inputEmail" class="col-sm-4 col-form-label ">Compétences Techniques</label>
    <div class="col-sm-10">
        {{ form_widget(form.competencestechniques, {'attr': {'class': 'form-control ' ~ (form.competencestechniques.vars.errors|length > 0 ? 'is-invalid' : '')}}) }}
        {{ form_errors(form.competencestechniques, {'attr': {'class': 'text-danger' ,'placeholder': 'Poste Demandé'}}) }}
    </div>
        <br>
         <label for="inputEmail" class="col-sm-4 col-form-label ">Certifications et Formations</label>
    <div class="col-sm-10">
        {{ form_widget(form.certifforma, {'attr': {'class': 'form-control ' ~ (form.certifforma.vars.errors|length > 0 ? 'is-invalid' : '')}}) }}
        {{ form_errors(form.certifforma, {'attr': {'class': 'text-danger' ,'placeholder': 'Poste Demandé'}}) }}
 <p style="color: red; font-weight: bold;">*Veuillez ajouter en pièce jointe les certifications et formations complémentaires telles que le permis de conduire, les certifications en sécurité agricole et les formations continues sous le format JPG ,JPEG ,PNG file.</p>

    </div>
        <br>
         <label for="inputEmail" class="col-sm-4 col-form-label ">Message de Motivation</label>
    <div class="col-sm-10">
        {{ form_widget(form.messagemotivation, {'attr': {'class': 'form-control ' ~ (form.messagemotivation.vars.errors|length > 0 ? 'is-invalid' : '')}}) }}
        {{ form_errors(form.messagemotivation, {'attr': {'class': 'text-danger' ,'placeholder': 'Poste Demandé'}}) }}
    </div>
<br>
        <button type="submit" class="btn btn-primary">Postuler </button>
        
        {{ form_end(form) }}

    </div>
{% endblock %}
