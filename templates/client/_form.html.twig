{{ form_start(form,{attr:{novalidate:'novalidate'}}) }}
<!-- Display form errors -->
{% if form_errors(form) %}
	<div class="alert alert-danger">
		{{ form_errors(form) }}
	</div>
{% endif %}

<div class="mb-3">
	{{ form_label(form.idUser) }}
	{{ form_widget(form.idUser, {'attr': {'class': 'form-control ' ~ (form.idUser.vars.errors|length > 0 ? 'is-invalid' : '')}}) }}
	{{ form_errors(form.idUser, {'attr': {'class': 'text-danger'}}) }}
</div>

