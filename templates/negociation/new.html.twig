{% extends 'nego.html.twig' %}



{% block body %}
<div class="container mt-5">
        
<div class="row justify-content-center">
          <div class="col-lg-7">
                        <div class="p-5">
        {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
        <div class="row mb-3">
			<label for="inputEmail" class="col-sm-4 col-form-label">Montant Proposé</label>
			<div class="col-sm-10">
				{{ form_widget(form.montantpropose, {'attr': {'class': 'form-control ' ~ (form.montantpropose.vars.errors|length > 0 ? 'is-invalid' : '')}}) }}
				{{ form_errors(form.montantpropose, {'attr': {'class': 'text-danger'}}) }}
			</div>
        </div>

        <div class="row mb-3">
			<label for="inputEmail" class="col-sm-4 col-form-label">Message</label>
			<div class="col-sm-10">
				{{ form_widget(form.message, {'attr': {'class': 'form-control ' ~ (form.message.vars.errors|length > 0 ? 'is-invalid' : '')}}) }}
				{{ form_errors(form.message, {'attr': {'class': 'text-danger'}}) }}
			</div>
        </div>
        <div class="row mb-3">
			<label for="inputEmail" class="col-sm-4 col-form-label">Date Négociation</label>
			<div class="col-sm-10">
				{{ form_widget(form.datenegociation, {'attr': {'class': 'form-control ' ~ (form.datenegociation.vars.errors|length > 0 ? 'is-invalid' : '')}}) }}
				{{ form_errors(form.datenegociation, {'attr': {'class': 'text-danger'}}) }}
			</div>
        </div>


        <button type="submit" class="btn btn-primary">Ajouter</button>

        {{ form_end(form) }}
		</div>
		</div>
		</div>
    </div>
    


    
{% endblock %}
