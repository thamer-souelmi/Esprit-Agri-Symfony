{% extends 'prod.html.twig' %}
{% block banner_image %}
    {{ asset('img/recru.jpg') }}
{% endblock %}
{% block product_heading %}
    <h1 class="display-3 text-white mb-4 animated slideInDown">Equipe </h1>
{% endblock %}
{% block body %}
    <div class="container mt-5">
        {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
        
        {{ form_row(form.NomEquipe, {'label': 'Nom de l\'Équipe', 'attr': {'class': 'form-control', 'placeholder': 'Nom de l\'Équipe'}}) }}
        <br>
        {{ form_row(form.tacheAttribut, {'label': 'Tache Attribut', 'attr': {'class': 'form-control', 'placeholder': 'Tache Attribut'}}) }}
        <br>
        {{ form_row(form.dateDebut, {'label': 'Date de Début', 'attr': {'class': 'form-control', 'placeholder': 'Date de Début'}}) }}
        <br>
        {{ form_row(form.duree, {'label': 'Durée', 'attr': {'class': 'form-control', 'placeholder': 'Durée'}}) }}
        <br>


        <div style="display: flex; justify-content: space-between; margin-bottom: 10px;">
            <div>
                {% include 'equipe/_form.html.twig' with {'submit_button': 'Modifier'} %}
            </div>
            <div>
                {% include 'equipe/_delete_form.html.twig' with {'submit_button': 'Supprimer'} %}
            </div>
        </div>

    </div>

    {{ form_end(form) }}
{% endblock %}
