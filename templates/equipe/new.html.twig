{% extends 'prod.html.twig' %}
{% block banner_image %}
    {{ asset('img/recru.jpg') }}
{% endblock %}
{% block product_heading %}
    <h1 class="display-3 text-white mb-4 animated slideInDown">Equipe </h1>
{% endblock %}
{% block body %}
    <div class="row justify-content-center">
        <div class="col-lg-7">
            <div class="p-5">
                {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}

                <br>

                                <label for="inputEmail" class="col-sm-4 col-form-label">Nom de l'Équipe</label>
                <div class="col-sm-10">
                    {{ form_widget(form.NomEquipe, {'attr': {'class': 'form-control ' ~ (form.NomEquipe.vars.errors|length > 0 ? 'is-invalid' : '')}}) }}
                    {{ form_errors(form.NomEquipe, {'attr': {'class': 'text-danger' }}) }}
                </div>
                <br>

                <label for="inputEmail" class="col-sm-4 col-form-label">Tache Attribut</label>
                <div class="col-sm-10">
                    {{ form_widget(form.tacheAttribut, {'attr': {'class': 'form-control ' ~ (form.tacheAttribut.vars.errors|length > 0 ? 'is-invalid' : '')}}) }}
                    {{ form_errors(form.tacheAttribut, {'attr': {'class': 'text-danger' ,'placeholder': 'Tache Attribut'}}) }}
                </div>
                <br>

                <label for="inputEmail" class="col-sm-4 col-form-label">Date de Début</label>
                <div class="col-sm-10">
                    {{ form_widget(form.dateDebut, {'attr': {'class': 'form-control ' ~ (form.dateDebut.vars.errors|length > 0 ? 'is-invalid' : '')}}) }}
                    {{ form_errors(form.dateDebut, {'attr': {'class': 'text-danger' }}) }}
                </div>
                <br>

                <label for="inputEmail" class="col-sm-4 col-form-label">Durée</label>
                <div class="col-sm-10">
                    {{ form_widget(form.duree, {'attr': {'class': 'form-control ' ~ (form.duree.vars.errors|length > 0 ? 'is-invalid' : '')}}) }}
                    {{ form_errors(form.duree, {'attr': {'class': 'text-danger' }}) }}
                </div>
                <br>



                <button type="submit" class="btn btn-primary">Créer l'équipe</button>

                {{ form_end(form) }}
            </div>
        </div>
    </div>

    <style>
        .text-danger {
            color: red;
        }
    </style>
{% endblock %}
