{% extends 'baseback.html.twig' %}

{% block body %}
    <div class="container mt-5">
        

        {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}

        {{ form_row(form.titre, {'attr': {'class': 'form-control', 'placeholder': 'Titre'}}) }}
        {{ form_row(form.montant, {'attr': {'class': 'form-control', 'placeholder': 'Montant'}}) }}
        {{ form_row(form.datepublication, {'attr': {'class': 'form-control', 'placeholder': 'Date de publication'}}) }}
        {{ form_row(form.localisation, {'attr': {'class': 'form-control', 'placeholder': 'Localisation'}}) }}
        {{ form_row(form.description, {'attr': {'class': 'form-control', 'placeholder': 'Description'}}) }}
        {{ form_row(form.photo, {'attr': {'class': 'form-control', 'placeholder': 'Image '}}) }}

        <button type="submit" class="btn btn-primary">Ajouter</button>

        {{ form_end(form) }}
    </div>
{% endblock %}
