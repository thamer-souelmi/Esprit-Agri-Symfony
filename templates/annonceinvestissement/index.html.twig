        function generateQR(idannonce) {
            // Appel AJAX pour obtenir l'URL du code QR
            fetch("{{ path('app_annonceinvestissement_qrcode', {'idannonce': '__IDANNONCE__'}) }}".replace('__IDANNONCE__', idannonce))
                .then(response => response.json())
                .then(data => {
