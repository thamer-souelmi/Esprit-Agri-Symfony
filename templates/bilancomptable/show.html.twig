{% extends 'baseback.html.twig' %}

{% block title %}Bilancomptable{% endblock %}

{% block body %}
    <h1 class="text-center">Bilan comptable</h1>

    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
            <table class="table">
            <tbody>
            
            <tr>
                <th class="text-right">Annee:</th>
                <td>{{ bilancomptable.annee ? bilancomptable.annee|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th style="text-align: center; font-weight: bold; text-decoration: underline;">ACTIF</th>
                <td style="text-align: center;"></td>
            </tr>
            <tr>
                <th>Actif immobilisé:</th>
                <td></td>
            </tr>
            <tr>
                <th>Terrains et bâtiments</th>
                <td>{{ bilancomptable.valeurterrain }}</td>
            </tr>
            <tr>
                <th>Autres Immobilisations</th>
                <td>{{ bilancomptable.autresimmobilisations }}</td>
            </tr>
            <tr>
                <th>Matériels</th>
                <td>{{ bilancomptable.materiels }}</td>
            </tr>
            <tr>
                <th>Total Actif immobilisé</th>
                <td>{{ totalActifImmobilise }}</td>
            </tr>
            <tr>
                <th>Actif circulant:</th>
                <td></td>
            </tr>
            <tr>
                <th>Stocks de produits</th>
                <td>{{ bilancomptable.stocksproduits }}</td>
            </tr>
            <tr>
                <th>Créance Client</th>
                <td>{{ bilancomptable.creanceclient }}</td>
            </tr>
            <tr>
                <th>Trésorerie</th>
                <td>{{ bilancomptable.tresorie }}</td>
            </tr>
            <tr>
                <th>Total Actif circulant</th>
                <td>{{ totalActifCirculant }}</td>
            </tr>
            <tr>
                <th style="text-align: center; font-weight: bold; text-decoration: none; color: black;">Total Actif</th>
                <td style="text-align: center; font-weight: bold; color: black;">{{ totalActifImmobilise+totalActifCirculant }}</td>
            </tr>
            <tr>
                <th style="text-align: center; font-weight: bold; text-decoration: underline;">PASSIF</th>
                <td style="text-align: center;"></td>
            </tr>
            <tr>
                <th>Capitaux propres :</th>
                <td></td>
            </tr>
            <tr>
                <th>Capital Social</th>
                <td>{{ bilancomptable.capitalsocial }}</td>
            </tr>
            <tr>
                <th>Réserves</th>
                <td>{{ bilancomptable.reserves }}</td>
            </tr>
            <tr>
                <th>Resultat Net</th>
                <td>{{ bilancomptable.resultatnet }}</td>
            </tr>
            <tr>
                <th>Total Capitaux propres</th>
                <td>{{ totalCapitauxPropres }}</td>
            </tr>
            <tr>
                <th>Dettes à long terme :</th>
                <td></td>
            </tr>
            <tr>
                <th>Emprunts bancaires</th>
                <td>{{ bilancomptable.emprunts }}</td>
            </tr>
            <tr>
                <th>Dettes Long terme</th>
                <td>{{ bilancomptable.dettesit }}</td>
            </tr>
            <tr>
                <th>Total Dettes à long terme </th>
                <td>{{ totalDettesLongTerme }}</td>
            </tr>
            <tr>
                <th>Dettes à court terme :</th>
                <td></td>
            </tr>
            <tr>
                <th>Fournisseurs</th>
                <td>{{ bilancomptable.fournisseurs }}</td>
            </tr>
            <tr>
                <th>Dettes Court terme</th>
                <td>{{ bilancomptable.dettesct }}</td>
            </tr>
            <tr>
                <th>Total Dettes à court terme </th>
                <td>{{ totalDettesCourtTerme }}</td>
            </tr>
            <tr>
                <th style="text-align: center; font-weight: bold; text-decoration: none; color: black;">Total Passif</th>
                <td style="text-align: center; font-weight: bold; color: black;">{{ totalCapitauxPropres+totalDettesLongTerme+totalDettesCourtTerme }}</td>
            </tr>
            
            
        </tbody>
       </table>

         <div class="d-flex justify-content-center mt-3">
			<div class="col-sm-20 mb-3 mb-sm-0">
				<a href="{{ path('app_bilancomptable_index') }}" class="btn btn-outline-warning ">
					<span class="icon text-primary-600">
						<i class="fas fa-arrow-left"></i>
					</span>
				</a>
                <a href="{{ path('generate_pdf', {'idbilanc': bilancomptable.idbilanc}) }}" class="btn btn-outline-warning ">
                    <span class="icon text-primary-600">
                        <i class="fas fa-print"></i> 
                    </span>
                </a>
                <a href="{{ path('app_bilancomptable_show_euro', {'idbilanc': bilancomptable.idbilanc}) }}" class="btn btn-outline-warning ">
                    <span class="icon text-primary-600">
                        <i class="fas fa-arrow-repeat">EURO 
                    </span>
                </a>
                <a href="{{ path('app_bilancomptable_show_usd', {'idbilanc': bilancomptable.idbilanc}) }}" class="btn btn-outline-warning ">
                    <span class="icon text-primary-600">
                        <i class="fas fa-arrow-repeat">USD 
                    </span>
                </a>
			</div>
		</div>
            </div>
        </div>
    </div>
    <br>
    <br>
{% endblock %}