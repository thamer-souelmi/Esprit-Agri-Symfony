{% extends 'backbase.html.twig' %}

{% block title %}Graphique des traitements médicaux par vétérinaire{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <!-- Ajoutez la balise pour charger la police Nunito depuis Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Nunito:wght@400;600;700&display=swap" rel="stylesheet">
     <style>
        .custom-font {
            font-family: 'Nunito', sans-serif;
        }
    </style>
{% endblock %}

{% block body %}
   
    <div style="width: 80%; margin: auto;">
        <canvas id="traitementsParVeterinaireChart" width="800" height="400"></canvas>

    </div>

    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
    
        document.addEventListener('DOMContentLoaded', function () {
            var data = {{ data is defined ? data | json_encode | raw : '{}' }};
            console.log(data);

            var ctx = document.getElementById('traitementsParVeterinaireChart').getContext('2d');
            var myChart = new Chart(ctx, {
                type: 'bar',
                data: {
                    labels: data.map(function (entry) { return entry.idvet.prenomvet; }),
                    datasets: [{
                        label: 'Pourcentage',
                        data: data.map(function (entry) { return entry.percentage; }),
                        backgroundColor: 'rgba(255, 99, 132, 0.2)',
                        borderColor: 'rgba(255, 99, 132, 1)',
                        borderWidth: 1
                    }]
                },
                options: {
                    scales: {
                        y: {
                            beginAtZero: true,
                            max: 100 
                        }
                    },
                    plugins: {
                        legend: {
                            display: true
                        }
                    }
                    
                }
            });
        });
    </script>
{% endblock %}
