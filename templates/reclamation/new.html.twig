{% extends 'prod.html.twig' %}

{% block title %}New Reclamation{% endblock %}

{% block banner_image %}
    {{ asset('img/1.jpeg') }}
{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-lg-7">
                <div class="p-5">
                    <h1>Créer une nouvelle réclamation</h1>
                    {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}

                    <div class="form-group">
                        {{ form_label(form.description, 'Description') }}
                        {{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
                    </div>

                    <div class="form-group">
                        {{ form_label(form.dateajout, 'Date Ajout') }}
                        {{ form_widget(form.dateajout, {'attr': {'class': 'form-control'}}) }}
                    </div>

                    <button type="submit" class="btn btn-primary">Ajouter</button>

                    {{ form_end(form) }}

                    <a href="{{ path('app_produit_index') }}">Retour à la liste</a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
