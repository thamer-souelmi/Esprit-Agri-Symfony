{% extends 'prod.html.twig' %}
{% block banner_image %}
{{ asset('img/still-life-black-background.jpg') }}
{% endblock %}
{% block product_heading %}
    <h1 class="display-3 text-white mb-4 animated slideInDown">Reclamation</h1>
{% endblock %}

{% block title %}New Reclamation{% endblock %}



{% block body %}
{% if errorMessage is not null %}
                <div class="alert alert-danger" role="alert">
                    {{ errorMessage }}
                </div>
            {% endif %}
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-lg-7">
                <div class="p-5">
                    <h1>Ajouter une nouvelle r√©clamation</h1>
                    {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}

                    <div class="form-group">
                        {{ form_label(form.description, 'Description') }}
                        {{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
                    </div>

                    <div class="form-group">
                        
                    </div>

                    <button type="submit" class="btn btn-primary">Ajouter</button>

                    {{ form_end(form) }}

                    <a href="{{ path('app_produit_index') }}">Retour au Produit</a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
