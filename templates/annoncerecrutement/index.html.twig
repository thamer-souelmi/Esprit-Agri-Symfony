

{% block title %}Annoncerecrutement index{% endblock %}

{% block body %}
    <h1>Annoncerecrutement index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Idrecurt</th>
                <th>Postedemande</th>
                <th>Salairepropose</th>
                <th>Typecontrat</th>
                <th>Datepub</th>
                <th>Localisation</th>
                <th>Dateembauche</th>
                <th>Nbposterecherche</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for annoncerecrutement in annoncerecrutements %}
            <tr>
                <td>{{ annoncerecrutement.idrecurt }}</td>
                <td>{{ annoncerecrutement.postedemande }}</td>
                <td>{{ annoncerecrutement.salairepropose }}</td>
                <td>{{ annoncerecrutement.typecontrat }}</td>
                <td>{{ annoncerecrutement.datepub ? annoncerecrutement.datepub|date('Y-m-d') : '' }}</td>
                <td>{{ annoncerecrutement.localisation }}</td>
                <td>{{ annoncerecrutement.dateembauche ? annoncerecrutement.dateembauche|date('Y-m-d') : '' }}</td>
                <td>{{ annoncerecrutement.nbposterecherche }}</td>
                <td>
                    <a href="{{ path('app_annoncerecrutement_show', {'idrecurt': annoncerecrutement.idrecurt}) }}">show</a>
                    <a href="{{ path('app_annoncerecrutement_edit', {'idrecurt': annoncerecrutement.idrecurt}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_annoncerecrutement_new') }}">Create new</a>
