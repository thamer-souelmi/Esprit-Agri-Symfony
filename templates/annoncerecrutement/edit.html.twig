{% extends 'prod.html.twig' %}

{% block title %}Modifier Recrutement{% endblock %}
{% block banner_image %}
    {{ asset('img/recru.jpg') }}
{% endblock %}
{% block product_heading %}
    <h1 class="display-3 text-white mb-4 animated slideInDown">Recrutement </h1>
{% endblock %}

{% block body %}
    <div class="container mt-5">
            {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
        {{ form_row(form.posteDemande, {'label': 'Poste Demandé', 'attr': {'class': 'form-control', 'placeholder': 'Poste Demandé'}}) }}
       <br>
        {{ form_row(form.salairepropose, {'label': 'Salaire Proposé', 'attr': {'class': 'form-control', 'placeholder': 'Salaire Proposé'}}) }}
        <br>
        {{ form_row(form.typecontrat, {'label': 'Type de Contrat', 'attr': {'class': 'form-control', 'placeholder': 'Type de Contrat'}}) }}
        <br>
        {{ form_row(form.localisation, {'label': 'Localisation', 'attr': {'class': 'form-control', 'placeholder': 'Localisation'}}) }}
        <br>
        {{ form_row(form.dateembauche, {'label': 'Date d\'Embauche', 'attr': {'class': 'form-control', 'placeholder': 'Date d\'Embauche'}}) }}
        <br>
        {{ form_row(form.nbposterecherche, {'label': 'Nombre de Postes Recherchés', 'attr': {'class': 'form-control', 'placeholder': 'Nombre de Postes Recherchés'}}) }}
        
        <br>
<div style="display: flex; justify-content: space-between : 5px;">
    <div>
        {% include 'annoncerecrutement/_form.html.twig' with {'submit_button': 'Modifier'} %}
    </div>
    

</div>

</div>



{{ form_end(form) }}

{% endblock %}
